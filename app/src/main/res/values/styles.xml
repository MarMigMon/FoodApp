<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@color/sunflower</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:isIndicator">true</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="MyBigRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:isIndicator">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar_big</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxHeight">36dp</item>
    </style>

    <style name="BodyText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DescriptionText" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat.Headline"></style>

    <style name="CardViewRound" parent="CardView.Light">
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="RecyclerMargins">
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>
